import java.awt.*;
import javax.swing.*;

public class EX09_02 extends JApplet implements Runnable {
	int num;

	public void init() {
		EX09_02 r = new EX09_02();
		Thread t = new Thread(r);
		t.start();
	}

	public void paint(Graphics g) {
		g.setColor(Color.blue);
		for (int i = 0; i > 0; i++) {
			num = 100 + (i * 20);
			g.drawString("JAVA Japplet", 100, num);
		}
	}

	public void run() {
		try {
			while (true) {
				paint(Graphics g);
			}
		} catch (Exception e) {
		}
	}

}
