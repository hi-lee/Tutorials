import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class KeyEventDraw extends JFrame implements KeyListener{
	String kname = " ";
	public KeyEventDraw() {
		// TODO Auto-generated constructor stub
		setFocusable(true);
		addKeyListener(this);
		setSize(200,300);
		setVisible(true);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
	}
	public void paint(Graphics g) {
		g.setColor(Color.red);
		g.drawString("키보드의 키를 누르면", 20, 20);
		g.setColor(Color.blue);
		g.drawString("키이름, 키값 표시", 20, 40);
	}
	public void keyPressed(KeyEvent e) {
		kname = "Key Pressde : " + e.getKeyText(e.getKeyCode());
		showStatus(kname);
		repaint();
	}
	private void showStatus(String kname2) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void keyReleased(KeyEvent e) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void keyTyped(KeyEvent e) {
		// TODO Auto-generated method stub
		
	}
	public static void main(String[] args) {
		new KeyEventDraw();
	}

}
