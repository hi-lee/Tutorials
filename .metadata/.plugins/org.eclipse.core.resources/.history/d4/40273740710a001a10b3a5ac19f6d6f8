import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class Ex11_01 extends JFrame implements ActionListener {
	JCheckBox c1,c2,c3;
	JTextField tf, tf1;
	JButton bt;
	
	public Ex11_01() {
		// TODO Auto-generated constructor stub
		super("체크박스 버튼 만들기");
		setLayout(new BorderLayout());
		JPanel p1 = new JPanel();
		p1.add(c1 = new JCheckBox("음악감상"));
		p1.add(c2 = new JCheckBox("등산"));
		p1.add(c3 = new JCheckBox("조깅"));
		JPanel p2 = new JPanel();
		p2.add(tf = new JTextField(10));
		p2.add(tf1 = new JTextField(10));
		JPanel p3 = new JPanel();
		p3.add(bt = new JButton("확인"));
		JPanel p4 = new JPanel();
		p4.add(p2, "North");
		p4.add(p3,"Center");
		
		c1.addActionListener(this);
		c2.addActionListener(this);
		c3.addActionListener(this);
		
		add(p1, "North");
		add(p4, "Center");
//		add(bt, "South");
		setSize(300,200);
		setVisible(true);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
	}
	public static void main(String[] args) {
		new Ex11_01();
		
	}
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub

			tf.setText(e.getActionCommand());

	}
}
