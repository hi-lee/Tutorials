import javax.swing.*;
import java.awt.*;

public class PieChart extends JApplet {
	int[] input = { 30, 15, 45, 10 };
	String[] title = { "Äá", "¹Ð", "½Ò", "¿Á¼ö¼ö" };
	Color[] color = { Color.red, Color.orange, Color.blue, Color.gray };

	public void init() {
		setBackground(Color.LIGHT_GRAY);
		setSize(400,300);
	}

	public void paint(Graphics g) {
		int startAngle=0;
		int pieSize;
		int subtot=0;
		
		for(int i=0; i<input.length; i++) {
			g.setColor(color[i]);			
			g.fillArc(0, 0, 200, 200, startAngle, 360*input[i]/100);
//			g.fillArc(0, 0, 200, 200, 360*input[i-1]/100, 360*input[i]/100);
//			g.fillArc(0, 0, 200, 200, 360*input[i-1]/100, 360*input[i]/100);
//			g.fillArc(0, 0, 200, 200, 360*input[i-1]/100, 360*input[i]/100);
		}
		for(int i=0; i<input.length; i++) {
			g.drawString(title[i], 265, i*45);
			g.setColor(color[i]);
			g.fillRect(250, i*30, 10, 10);
			
			
		}
	}

}
